<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewFrontPart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grid3"
        android:contentDescription="@string/frontPart" />

    <ImageView
        android:id="@+id/imageViewBulb"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:background="@color/colorBackground"
        android:contentDescription="@string/lamp"
        android:src="@drawable/lightbulb_on" />

    <ImageView
        android:id="@+id/btnImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@color/colorBackground"
        android:contentDescription="@string/buttonOnTorch"
        android:onClick="flash"
        android:src="@drawable/btnon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/name_version"
        android:textAlignment="center" />

</RelativeLayout>